<div class="item w2 lockAspect" id="item_{{ name }}" data-isStamped="false">  
	<div id="sample_view">
		<i class="icon-cancel-circled"></i>
		<i class="icon-lock-open pinDiv"></i>
		<div class="small default btn icon-right entypo icon-window" id="new-window-btn"><a href="#" id="new-window-target" target="_blank">New Window</a></div>
		
		<button class="small info btn prev-button"><i class="icon-left-dir"></i></button>
		<div class="sample-name" ><strong> {{ name }} </strong></div>
		<button class="small info btn next-button"><i class="icon-right-dir"></i></button>
		
		<form action="{{ updateSampleInfo }}" id="sample-info-form" method="post">
		<table>
			<tr>
				<th><label for="id_type">Type:</label></th>
				<td><select id="id_type" name="type">
						<option value="" selected="selected">---------</option> 
						{% for type in types_list %}
						<option value="{{ type.value }}">{{ type.display_name }}</option>
						{% endfor %}
				</select></td>
			</tr>
			<tr>
				<th><label for="id_region">Region:</label></th>
				<td><select id="id_region" name="region">
						<option value="" selected="selected">---------</option> 
						{% for region in regions_list %}
						<option value="{{ region.shortName }}">{{ region.name }}</option>
						{% endfor %}
				</select></td>
			</tr>
			<tr>
				<th><label for="id_starting_number">Starting #:</label></th>
				<td><input id="id_starting_number" name="starting_number" type="text" value="{{ starting_number }}"></td>
				</tr>
				<tr>
				<th> <label for="id_quantity">Quantity:</label> </th>
				<td> <input id="id_quantity" name="quantity" type="text" value="{{ quantity }}"></td>
			</tr>
				<tr>
					<th><label for="id_triplicate">Triplicate:</label></th>
					<td><select id="id_triplicate" name="triplicate">
							<option value="" selected="selected">---------</option>
							{% for triplicate in triplicate_list %}
							<option value="{{ triplicate }}">{{ triplicate.display_name }}</option>
							{% endfor %}
					</select></td>
				</tr>
			<tr>
				<th><label for="id_year">Year:</label></th>
				<td><input id="id_year" maxlength="2" name="year" type="text" value="{{ year }}" /></td>
			</tr>
			<tr>
				<th><label for="id_latitude">Latitude:</label></th>
				<td><input id="id_latitude" name="latitude" step="any" type="number" value="{{ lat }}"/></td>
			</tr>
			<tr>
				<th><label for="id_longitude">Longitude:</label></th>
				<td><input id="id_longitude" name="longitude" step="any" type="number" value="{{ lon }}"/></td>
			</tr>
			</table>
		</form>
		<input class="small info btn" type="submit" id="updateSampleInfoSubmit" value="Save" />	
</div>