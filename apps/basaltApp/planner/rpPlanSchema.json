{
    "xpjson": "0.2",
    "type": "PlanSchema",
    "name": "RP Plan Schema",
    "notes": "Define RP plans",
    "id": "http://rp.xgds.org/rpPlanSchema.json",

    "planIdFormat": "{plan.site.id}{plan.platform.id}{plan.planNumber:03d}_{plan.planVersion}_PLAN",
    "stationIdFormat": "{plan.site.id}{plan.platform.id}{plan.planNumber:03d}_{plan.planVersion}_STN{stationIndex:02d}",
    "segmentIdFormat": "{plan.site.id}{plan.platform.id}{plan.planNumber:03d}_{plan.planVersion}_SEG{stationIndex:02d}",
    "commandIdFormat": "{parent.id}_{commandIndex:01d}_{command.presetCode}",
    
     "planParams": [
	{
	    "type": "ParamSpec",
	    "id": "defaultSpeed",
	    "valueType": "number",
        "unit": "meters/sec",
	    "notes": "The default speed for traverses",
	    "required": false,
	    "name": "Default Speed",
	    "default": 0.025,
	    "widget":"number"
	},
	{
	    "type": "ParamSpec",
	    "id": "scheduledStartTime",
	    "valueType": "date-time",
	    "notes": "UTC time plan should start",
	    "required": false,
	    "name": "Scheduled Start",
	    "widget":"datetime"
	}
    ],

    "paramSpecs": [
        {
            "type": "ParamSpec",
            "id": "showWedge",
            "valueType": "boolean",
            "default": false,
            "notes": "Show Wedge",
            "visible": false
        },
        {
            "type": "ParamSpec",
            "id": "showPolygon",
            "valueType": "boolean",
            "default": true,
            "notes": "Show Polygon",
            "visible": true
        },
        {
            "type": "ParamSpec",
            "id": "hfov",
            "valueType": "number",
            "required": false,
            "minimum": 0,
            "notes": "Horizontal field of view (degrees). Used for field of view wedge display.",
            "visible": false
        },
        {
            "type": "ParamSpec",
            "id": "range",
            "valueType": "number",
            "required": false,
            "minimum": 0,
            "notes": "Range (m) at which resolution of the data product gets 'unacceptably low'. Used for field of view wedge display.",
            "visible": false
        },
        {
            "type": "ParamSpec",
            "id": "tolerance",
            "valueType": "number",
            "minimum": 0,
            "default": 0.6,
            "notes": "The rover must arrive within this distance of the goal position (meters)."
        },
        {
            "type": "ParamSpec",
            "id": "distanceMeters",
            "valueType": "number",
            "minimum": 0,
            "notes": "The arc length the rover should travel (meters)."
        },
        {
            "type": "ParamSpec",
            "id": "driveSpeed",
            "valueType": "number",
            "required": false,
            "minimum": 0,
            "notes": "The speed to drive at."
        },
        {
            "type": "ParamSpec",
            "id": "target",
            "valueType": "Point"
        },
        {
            "type": "ParamSpec",
            "id": "tolerance",
            "default": 0.6,
            "valueType": "number",
            "required": false
        },
        {
            "type": "ParamSpec",
            "id": "duration",
           	"widget":"h:m:s",
            "valueType": "number",
            "minimum": 0,
            "default": 0,
            "notes": "(Hours:)Minutes:Seconds"
        }
    ],

    "stationParams": [
        {
            "type": "ParamSpec",
            "id": "tolerance",
            "parent": "tolerance"
        },
        {
            "type": "ParamSpec",
            "id": "userDuration",
           	"widget":"h:m:s",
            "valueType": "number",
            "minimum": 0,
            "default": 0,
            "notes": "Hours:Minutes:Seconds",
            "name": "User Duration"
            
        },
        {
            "type": "ParamSpec",
            "id": "spifeDuration",
           	"widget":"h:m:s",
            "valueType": "number",
            "minimum": 0,
            "default": 0,
            "editable": false,
            "notes": "Hours:Minutes:Seconds",
            "name": "SPIFE Duration"
        },
        {
		    "type": "ParamSpec",
		    "id": "spifeEarliestStartTime",
		    "valueType": "date-time",
		    "required": false,
		    "editable": false,
		    "widget":"text",
		    "name": "SPIFE Earliest Start"
		},
        {
		    "type": "ParamSpec",
		    "id": "spifeLatestStartTime",
		    "valueType": "date-time",
		    "required": false,
		    "editable": false,
		    "widget":"text",
		    "name": "SPIFE Latest Start"
		},
        {
		    "type": "ParamSpec",
		    "id": "spifeEarliestEndTime",
		    "valueType": "date-time",
		    "required": false,
		    "editable": false,
		    "widget":"text",
		    "name": "SPIFE Earliest End"
		},
        {
		    "type": "ParamSpec",
		    "id": "spifeLatestEndTime",
		    "valueType": "date-time",
		    "required": false,
		    "editable": false,
		    "widget":"text",
		    "name": "SPIFE Latest End"
		}
    ],

    "segmentParams": [
        {
            "type": "ParamSpec",
            "id": "hintedSpeed",
            "valueType": "number",
            "required": false,
            "minimum": 0,
            "notes": "Recommended rover driving speed. Actual driving speed may differ based on nav mode."
        }
    ],
    
     "commandSpecs": [
     ],

    "stationSequenceCommands": [
    ],

    "segmentSequenceCommands": [
    ]
}
